<p id="notice"><%= notice %></p>
<% if logged_in? %>
  <h1>This should be a map, centered on current location.</h1>

  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Password digest</th>
        <th>Sms</th>
        <th>Username</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.password_digest %></td>
          <td><%= user.sms %></td>
          <td><%= user.username %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <% unless user == current_user %>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= link_to 'Login', login_path %><br>
<% end %>

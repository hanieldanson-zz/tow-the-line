<p id="notice"><%= notice %></p>

<h1>Listing Cars</h1>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Nickname</th>
      <th>License Plate Number</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.color %></td>
        <td><%= car.nickname %></td>
        <td><%= car.license_plate_number %></td>
        <td><%= car.longitude %></td>
        <td><%= car.latitude %></td>
        <td><%= car.user %></td>
        <td><%= link_to 'Edit', edit_user_car_path(id: car.id) %></td>
        <td><%= link_to 'Destroy', user_car_path(id: car.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
